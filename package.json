{
  "name": "table-contentful-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@contentful/app-sdk": "4.29.1",
    "@contentful/f36-components": "4.74.1",
    "@contentful/f36-icons": "4.29.0",
    "contentful-management": "7.54.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-scripts": "5.0.1"
  },
  "scripts": {
    "start": "cross-env BROWSER=none react-scripts start",
    "build": "react-scripts build",
    "lint": "eslint . --ext js,jsx,ts,tsx",
    "lint:fix": "yarn lint -- --fix",
    "format": "prettier --check \"**/*.{jsx,js,ts,tsx,md,mdx,json}\"",
    "format:fix": "prettier --write \"**/*.{jsx,js,ts,tsx,md,mdx,json}\"",
    "test": "react-scripts test",
    "test:ci": "CI=true react-scripts test",
    "test:ci:coverage": "CI=true react-scripts test --coverage",
    "eject": "react-scripts eject",
    "release": "yarn build && yarn upload",
    "upload": "contentful-app-scripts upload --bundle-dir ./build",
    "upload-ci": "contentful-app-scripts upload --ci --bundle-dir ./build  --organization-id $CONTENTFUL_ORG_ID --definition-id $CONTENTFUL_APP_DEF_ID --token $CONTENTFUL_ACCESS_TOKEN",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint",
    "*": "prettier --check"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@contentful/app-scripts": "0.15.8",
    "@testing-library/dom": "8.20.1",
    "@testing-library/jest-dom": "5.17.0",
    "@testing-library/react": "12.1.5",
    "@testing-library/user-event": "13.5.0",
    "@types/jest": "27.5.2",
    "@types/node": "16.18.115",
    "@types/react": "17.0.83",
    "@types/react-dom": "17.0.25",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "cross-env": "7.0.3",
    "decode-html": "2.0.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.37.2",
    "eslint-plugin-react-hooks": "4.6.2",
    "husky": "7.0.4",
    "lint-staged": "12.5.0",
    "prettier": "2.8.8",
    "typescript": "4.9.5"
  },
  "homepage": "."
}
